<?xml version="1.0"?>

<config>
	<modules>
		<Boxalino_Cem>
			<version>1.7</version>
		</Boxalino_Cem>
	</modules>

	<global>

		<helpers>
			<boxalinocem>
				<class>Boxalino_Cem_Helper</class>
			</boxalinocem>
		</helpers>
		<index>
			<indexer>
				<boxalinocem_xmlindexer>
					<model>boxalinocem/indexer</model>
				</boxalinocem_xmlindexer>
			</indexer>
		</index>
		<models>
			<boxalinocem>
				<class>Boxalino_Cem_Model</class>
				<resourceModel>boxalinocem_mysql4</resourceModel>
			</boxalinocem>
			<boxalinocem_mysql4>
				<class>Boxalino_Cem_Model_Mysql4</class>
				<entities>
				</entities>
			</boxalinocem_mysql4>
		</models>
	</global>
	<frontend>
  		<translate>
			<modules>
				<Boxalino_Cem>
					 <files>
						  <default>Boxalino_Cem.csv</default>
					 </files>
				</Boxalino_Cem>
			</modules>
		</translate>
	</frontend>
	<adminhtml>
		<translate>
			<modules>
				<Boxalino_Cem>
					 <files>
						  <default>Boxalino_Cem.csv</default>
					 </files>
				</Boxalino_Cem>
			</modules>
		</translate>
	</adminhtml>

	<default>
		<boxalinocem>
			<service>
				<connect_timeout>1000</connect_timeout>
				<connect_tries>5</connect_tries>
				<read_timeout>15000</read_timeout>
				<language>en</language>
			</service>
			<synchronization>
				<data_mode>1</data_mode>
				<export_categories>1</export_categories>
				<export_tags>1</export_tags>
				<image_sizes>standard:300x300</image_sizes>
				<small_image_sizes>standard:70x70</small_image_sizes>
				<maximum_population>0</maximum_population>
			</synchronization>
			<frontend>
				<charset>UTF-8</charset>
			</frontend>
		</boxalinocem>
	</default>
</config>
